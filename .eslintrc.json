{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-unused-vars": "off",
        "no-tabs": "off",
        "no-mixed-spaces-and-tabs": "off",
        "space-before-function-paren": "off",
        "semi": "off"
    }
}
